extends _pug-includes/layout

block vars 
    - var cms = true;
    - var current = 'cms-post.html';  

block content
        // Page Header
        .page-header.d-flex.justify-content-between.align-items-center
            h1.page-heading Posts
            div
                a.btn.btn-primary.text-uppercase(href="cms-post-new.html") 
                    i.fa.fa-plus.me-2 
                    | Add new

        include _pug-includes/inc-datatable-data

        - var categories = []
        - categories.push({name: 'Gear', count: 23})
        - categories.push({name: 'Stories', count: 2})
        - categories.push({name: 'Tips & Tricks', count: 4})
        - categories.push({name: 'Trips', count: 5})
        - categories.push({name: 'Gear', count: 23})
        - categories.push({name: 'Stories', count: 2})
        - categories.push({name: 'Tips & Tricks', count: 4})
        - categories.push({name: 'Trips', count: 5})
        - categories.push({name: 'Uncategorized', count: 2})

        - var categoryCount = categories.length;

        - var images = ['soroush-zargar-zFSUhqGual8-unsplash.jpg', 'faruk-kaymak-CNVvDjVDiVI-unsplash.jpg',  'aron-visuals-3jBU9TbKW7o-unsplash.jpg', 'elizabeth-gottwald-dnIWYrliZfU-unsplash.jpg',  'willian-justen-de-vasconcellos-4hMET7vYTAQ-unsplash.jpg', 'sorasak-_UIN-pFfJ7c-unsplash.jpg', 'montylov-ktZZiHb-GoI-unsplash.jpg', 'joseph-barrientos-Ji_G7Bu1MoM-unsplash.jpg', 'henrique-ferreira-RKsLQoSnuTc-unsplash.jpg','luca-bravo-O453M2Liufs-unsplash.jpg', 'mesut-kaya-eOcyhe5-9sQ-unsplash.jpg', 'stefan-stefancik-0wMmxNB6Xzc-unsplash.jpg']

        - var imageCount = images.length; 

        section.mb-5

            .card
                .card-body

                    table#postDatatable.table.table-hover.align-middle
                        thead
                            tr
                                th 
                                th 
                                th Title
                                th Author
                                th Categories
                                th Date
         
                        tbody
                            each val, index in dataTable
                               
                                - imageIndex = index % imageCount;
                                - categoryIndex = index % categoryCount;
                                - month = Math.floor((Math.random() * 12) + 1).toString().padStart(2, "0");
                                - day = Math.floor((Math.random() * 31) + 1).toString().padStart(2, "0");

                                tr
                                    td <span class="form-check"><input class="form-check-input" type="checkbox"></span>
                                    td 
                                        a(href="cms-post-new.html")
                                            img.img-fluid.rounded(src='img/photos/w-100/' + images[imageIndex], alt=val.company, width="100")
                                    td <a href="cms-post-new.html" class="text-decoration-none fw-bolder">#{val.company}</a>
                                    td #{val.person}
                                    td #{categories[categoryIndex].name}
                                    td 2020/#{month}/#{day}

                    span#categoryBulkAction.me-2
                        select.form-select.form-select-sm.d-inline.w-auto(name="categoryBulkAction")
                            option Bulk Actions
                            option Delete
                        button.btn.btn-sm.btn-outline-primary.align-top Apply
    
